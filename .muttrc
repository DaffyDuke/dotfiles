# Sending mail
set smtp_url = "smtps://<username>@smtp.lautre.net/:587/"
set from = "<username>@lautre.net"
set realname = "<username>"
set smtp_pass = ""

# Receiving mail
set imap_user = "<username>"
set imap_pass = ""
set folder = "imaps://<yunohost>:993"
set spoolfile = "imaps://<yunohost>/INBOX"
set postponed = "imaps://<yunohost>/INBOX.Drafts"
set record = "imaps://<yunohost>/INBOX.Sent"
set mail_check = 120
set timeout = 300
set imap_keepalive = 300

# Composing options
set editor = 'vim + -c "set textwidth=72" -c "set wrap"'
set edit_headers = yes

# Viewinf options
set include
set sort = 'threads'
set sort_aux = 'reverse-last-date-received'
set auto_tag = yes
set pager_index_lines = 10
ignore "Authentication-Results:"
ignore "DomainKey-Signature:"
ignore "DKIM-Signature:"
hdr_order Date From To Cc
alternative_order text/plain text/html *
auto_view text/html
bind editor <Tab> complete-query
bind editor ^T complete
bind editor <space> noop
